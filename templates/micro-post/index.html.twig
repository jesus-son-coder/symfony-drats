{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
    <h1>MicroPosts</h1>
    <hr>

    {% for message in app.flashes('notice') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}

    <h6 class="border-bottom border-gray pb-2 mb-8">Recent updates</h6>

    {% for post in posts %}
        {{ include('micro-post/partials/_post.html.twig', { 'post': post}) }}
        <small class="d-block text-right mt-3">
            {% if is_granted('edit', post) %}
                <a href="{{ path('micro_post_edit', {'id': post.id}) }}">Edit</a>
            {% endif %}

            {% if is_granted('delete', post) %}
                <a href="{{ path('micro_post_delete', {'id': post.id}) }}">Delete</a>
            {% endif %}
        </small>

    {% endfor %}
{% endblock %}