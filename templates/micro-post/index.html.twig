{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
    <h1>MicroPosts</h1>
    <hr>

    <small class="d-block text-right mt-3">
        <a href="{{ path('micro_post_add') }}">Add new</a>
    </small>
    <h6 class="border-bottom border-gray pb-2 mb-8">Recent updates</h6>

    {% for post in posts %}
        <a href="{{ path('micro_post_post', {'id': post.id}) }}">
            {{ include('micro-post/partials/_post.html.twig', { 'post': post}) }}
        </a>
    {% endfor %}
{% endblock %}