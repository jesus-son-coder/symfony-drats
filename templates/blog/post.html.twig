{% extends 'base.html.twig' %}

{% block title %}{{ post.title }}{% endblock %}

{% block body %}
    <h1>{{ post.title }}</h1>
    <p>ID {{ id }}</p>
    <h3>{{ post.title }}</h3>
    <p>{{ post.text }}</p>
    Here is the current locale {{ locale }}
    <br><br>
    Variable spécifique au template Twig :
    Message : {{ message }}
    <br>
    <hr>
    Les variables globales prédéfinies de Twig :
    <hr>
    <p><strong>Env :</strong> {{ app.environment }}</p>
    <p><strong>User :</strong> {{ app.user }}</p>
    <p><strong>Request :</strong> {{ app.request }}</p>
    <p><strong>Session started :</strong> {{ app.session.isStarted() }}</p>
    <p><strong>Debug :</strong> {{ app.debug }}</p>
{% endblock %}